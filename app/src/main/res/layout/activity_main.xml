<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.MainActivity">

    <!-- FrameLayout for Fragments -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/fab"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Floating Bottom Navigation Bar -->
    <RelativeLayout
        android:id="@+id/floatingNavBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/custom_nav_background"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home Button -->
        <ImageView
            android:id="@+id/home"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:src="@drawable/ic_home_border"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Home" />

        <!-- Search Button -->
        <ImageView
            android:id="@+id/search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@drawable/ic_search_border"
            android:layout_toEndOf="@id/home"
            android:layout_marginStart="30dp"
            android:layout_centerVertical="true"
            android:contentDescription="Search" />

        <!-- Profile Button -->
        <ImageView
            android:id="@+id/favourite"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@drawable/ic_favorite_border"
            android:layout_toStartOf="@+id/profile"
            android:layout_marginEnd="30dp"
            android:layout_centerVertical="true"
            android:contentDescription="Favourite" />

        <!-- Cart Button -->
        <ImageView
            android:id="@+id/profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:src="@drawable/ic_profile_border"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Profile" />

    </RelativeLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_border"
        app:backgroundTint="@color/darkGray"
        android:contentDescription="Add"
        app:layout_constraintBottom_toTopOf="@+id/floatingNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:elevation="0dp"
        android:layout_marginBottom="-40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
